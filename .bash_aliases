alias s="sudo"
alias v="nvim"

# Debian-based only
alias inst="sudo apt install"
alias del="sudo apt purge --auto-remove -y"
alias upd="sudo apt update && sudo apt upgrade -y"

alias ali="v ~/.bash_aliases"
alias aliu=". ~/.bash_aliases"
alias ls="ls --group-directories-first"
alias pg="sudo ping 1.1.1.1 -c 100"
alias sync="sudo hwclock --hctosys"
alias pbcopy="xsel -bi"
alias pbpaste="xsel -bo"